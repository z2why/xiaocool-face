{"ast":null,"code":"//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\nimport { VEmojiPicker } from 'v-emoji-picker';\nexport default {\n  name: 'Chat',\n  components: {\n    VEmojiPicker\n  },\n  props: {\n    client: {\n      type: Object,\n      default: null\n    },\n    receiveMsg: {\n      type: String,\n      require: false,\n      default: ''\n    }\n  },\n\n  data() {\n    return {\n      visible: false,\n      recText: '',\n      sendText: '',\n      editor: null,\n      toolbarConfig: {},\n      editorConfig: {\n        placeholder: '请输入内容...'\n      },\n      mode: 'default' // or 'simple'\n\n    };\n  },\n\n  mounted() {\n    document.addEventListener(\"click\", e => {\n      if (!this.$refs.box.contains(e.target)) this.visible = false;\n    });\n  },\n\n  watch: {\n    receiveMsg() {\n      this.receiveMsgHandle();\n    }\n\n  },\n  methods: {\n    popoverClose(scope) {\n      this.$refs['popverRef'].doClose();\n    },\n\n    selectEmoji(emoji) {\n      console.log(emoji);\n    },\n\n    receiveMsgHandle() {\n      this.recText += this.receiveMsg;\n    },\n\n    onCreated(editor) {\n      this.editor = Object.seal(editor); // 一定要用 Object.seal() ，否则会报错\n    },\n\n    beforeDestroy() {\n      const editor = this.editor;\n      if (editor == null) return;\n      editor.destroy(); // 组件销毁时，及时销毁编辑器\n    }\n\n  }\n};","map":{"version":3,"mappings":";;;;;;;;;;;;;;;;;;;;;;;;;AA0BA;AAEA;EACAA,YADA;EAEAC;IACAC;EADA,CAFA;EAKAC;IACAC;MACAC,YADA;MAEAC;IAFA,CADA;IAKAC;MACAF,YADA;MAEAG,cAFA;MAGAF;IAHA;EALA,CALA;;EAiBAG;IACA;MACAC,cADA;MAEAC,WAFA;MAGAC,YAHA;MAIAC,YAJA;MAKAC,iBALA;MAMAC;QAAAC;MAAA,CANA;MAOAC,eAPA,CAOA;;IAPA;EASA,CA3BA;;EA4BAC;IACAC;MACA;IACA,CAFA;EAGA,CAhCA;;EAiCAC;IACAb;MACA;IACA;;EAHA,CAjCA;EAsCAc;IACAC;MACA;IACA,CAHA;;IAIAC;MACAC;IACA,CANA;;IAOAC;MACA;IACA,CATA;;IAUAC;MACA,kCADA,CACA;IACA,CAZA;;IAaAC;MACA;MACA;MACAd,iBAHA,CAGA;IACA;;EAjBA;AAtCA","names":["name","components","VEmojiPicker","props","cli
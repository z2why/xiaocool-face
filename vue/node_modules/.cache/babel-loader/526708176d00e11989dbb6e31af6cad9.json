{"ast":null,"code":"//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\nimport Vue from 'vue';\nimport { Editor, Toolbar } from '@wangeditor/editor-for-vue';\nimport axios from 'axios';\nexport default Vue.extend({\n  components: {\n    Editor,\n    Toolbar\n  },\n\n  created() {\n    this.user = JSON.parse(localStorage.getItem(\"user\"));\n    this.getUser().then(res => {\n      this.form = res;\n    });\n    this.ux = JSON.stringify(this.user).length;\n  },\n\n  data() {\n    return {\n      name: 'MyInfo',\n      user: localStorage.getItem(\"user\") ? JSON.parse(localStorage.getItem(\"user\")) : {},\n      id: '',\n      ovo: 0,\n      form: {},\n      dialogVisible: false,\n      editor: null,\n      toolbarConfig: {},\n      editorConfig: {\n        placeholder: '请输入内容...'\n      },\n      mode: 'default',\n      // or 'simple'\n      ux: ''\n    };\n  },\n\n  methods: {\n    async getUser() {\n      return (await this.request.get(\"/user/username/\" + this.user.username)).data;\n    },\n\n    logout() {\n      this.$store.commit(\"logout\");\n      this.$message.success(\"退出成功\");\n      this.$router.push('/');\n    },\n\n    onCreated(editor) {\n      this.editor = Object.seal(editor); // 一定要用 Object.seal() ，否则会报错\n    },\n\n    //上传头像\n    filesUploadSuccess(res) {\n      this.form.avatar = res;\n    },\n\n    //上传人脸识别照片\n    filesUploadSuccess1(res) {\n      console.log(\"1\" + res);\n      this.form.faceImage = res;\n    },\n\n    //编辑用户信息\n    handleEdit() {\n      this.form = {\n        id: this.user.id,\n        name: this.user.name,\n        telephone: this.user.telephone,\n        sex: this.user.sex,\n        email: this.user.email,\n        hobby: this.user.hobby,\n        username: this.user.username,\n        password: this.user.password,\n        profile: this.user.profile,\n        faceImage: this.user.faceImage\n      };\n      this.dialogVisible = true;\n    },\n\n    save() {\n      this.request.post(\"/user\", this.form).then(res => {\n        if (res.code === '200') {\n          this.$message.success(\"保存成功\"); // 触发父级更新User的方法\n\n          this.$emit(\"refreshUser\"); // 更新浏览器存储的用户信息\n\n          this.getUser().then(res => {\n            res.token = JSON.parse(localStorage.getItem(\"user\")).token;\n            localStorage.setItem(\"user\", JSON.stringify(res));\n            location.reload();\n          });\n        } else {\n          this.$message.error(\"保存失败\");\n        }\n      });\n    }\n\n  },\n\n  mounted() {\n    // 模拟 ajax 请求，异步渲染编辑器\n    setTimeout(() => {\n      this.form.profile = '<p>' + this.user.profile + '</p>';\n    }, 1500);\n  },\n\n  beforeDestroy() {\n    const editor = this.editor;\n    if (editor == null) return;\n    editor.destroy(); // 组件销毁时，及时销毁编辑器\n  }\n\n});","map":{"version":3,"mappings":";;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;AAuLA;AACA;AACA;AAGA;EACAA;IAAAC;IAAAC;EAAA,CADA;;EAEAC;IACA;IACA;MACA;IACA,CAFA;IAGA;EACA,CARA;;EASAC;IACA;MACAC,cADA;MAEAC,kFAFA;MAGAC,MAHA;MAIAC,MAJA;MAKAC,QALA;MAMAC,oBANA;MAOAC,YAPA;MAQAC,iBARA;MASAC;QAAAC;MAAA,CATA;MAUAC,eAVA;MAUA;MACAC;IAXA;EAaA,CAvBA;;EAyBAC;IACA;MACA;IACA,CAHA;;IAIAC;MACA;MACA;MACA;IACA,CARA;;IASAC;MACA,kCADA,CACA;IACA,CAXA;;IAWA;IACAC;MACA;IAEA,CAfA;;IAiBA;IACAC;MACAC;MACA;IACA,CArBA;;IAyBA;IACAC;MACA;QACAhB,gBADA;QAEAF,oBAFA;QAGAmB,8BAHA;QAIAC,kBAJA;QAKAC,sBALA;QAMAC,sBANA;QAOAC,4BAPA;QAQAC,4BARA;QASAC,0BATA;QAUAC;MAVA;MAYA;IACA,CAxCA;;IAyCAC;MACA;QACA;UACA,8BADA,CAGA;;UACA,0BAJA,CAMA;;UACA;YACAC;YACAC;YACAC;UACA,CAJA;QAQA,CAfA,MAeA;UACA;QACA;MAEA,CApBA;IAqBA;;EA/DA,CAzBA;;EA8FAC;IACA;IACAC;MACA;IACA,CAFA,EAEA,IAFA;EAGA,CAnGA;;EAoGAC;IACA;IACA;IACA3B,iBAHA,CAGA;EACA;;AAxGA","names":["components","Editor","Toolbar","created","data","name","user","id","ovo","form","dialogVisible","editor","toolbarConfig","editorConfig","placeholder","mode","ux","methods","logout","onCreated","filesUploadSuccess","filesUploadSuccess1","console","handleEdit","telephone","sex","email","hobby","username","password","profile","faceImage","save","res","localStorage","location","mounted","setTimeout","beforeDestroy"],"sourceRoot":"src/views","sources":["MyInfo.vue"],"sourcesContent":["<template>\r\n\r\n\r\n  <div class=\"MyInfo\">\r\n    <div style=\"height: 80px\">\r\n    <h1>个人资料</h1>\r\n    </div>\r\n\r\n    <el-card class=\"box-card\" v-if=\"ux===2\" >\r\n      <div slot=\"header\" class=\"clearfix box-card-header\" >\r\n        <span><icon CLASS=\"el-icon-user\"></icon> 基本信息</span>\r\n      </div>\r\n        <span>\r\n        <h1>登录后即可查看</h1></span>\r\n\r\n    </el-card>\r\n    <el-card class=\"box-card\" v-if=\"ux!==2\" >\r\n      <div slot=\"header\" class=\"clearfix box-card-header\">\r\n        <span><icon CLASS=\"el-icon-user-solid\" style=\"padding-right: 10px\"></icon>基本信息</span>\r\n      </div>\r\n      <div class=\"MyInfo-body\">\r\n        <div>\r\n\r\n\r\n          <div  style=\"padding-left: 11px; cursor: pointer;position: relative;top: 9px;\" @mouseenter=\"ovo=1\" @mouseleave=\"ovo=0\"  @click=\"handleEdit()\">\r\n            <img :src=\"user.avatar\"   class=\"avatar1\" />\r\n            <p v-show=\"ovo===1\" class=\"avatar2\"  style=\"color: snow;position: absolute;width: 160px;z-index: 1;left: 15px;top: 25px;font-size: medium\">更换头像</p>\r\n\r\n          </div>\r\n\r\n\r\n          <span>{{user.name}}</span>\r\n        </div>\r\n        <div style=\"padding-top: 30px;padding-left: 10px;margin-bottom: 10px;\">\r\n          <div>用户唯一id :</div>\r\n          <div>{{user.id}}</div>\r\n        </div>\r\n      </div>\r\n    </el-card>\r\n\r\n    <el-card class=\"box-card\" v-if=\"ux!==2\">\r\n      <div slot=\"header\" class=\"clearfix box-card-header\">\r\n        <span><icon CLASS=\"el-icon-star-off\" style=\"padding-right: 10px\"></icon>信息修改</span>\r\n\r\n\r\n        <el-button\r\n          @click=\"handleEdit()\"\r\n          type=\"primary\"\r\n          icon=\"el-icon-edit\"\r\n          circle\r\n          size=\"mini\"\r\n        ></el-button>\r\n\r\n      </div>\r\n      <div class=\"MyInfo-body\">\r\n        <div>\r\n          <div align=\"center\">姓名  :</div>\r\n          <div>{{user.name}}</div>\r\n        </div>\r\n        <div>\r\n          <div align=\"center\">个人简介 ：</div>\r\n          <div>\r\n            <div v-html=\"user.profile\" style=\"width: auto\"></div>\r\n          </div>\r\n        </div>\r\n        <div>\r\n          <div  align=\"center\">手机号码 ：</div>\r\n          <div>{{user.telephone}}</div>\r\n        </div>\r\n        <div>\r\n          <div  align=\"center\">邮箱 ：</div>\r\n          <div>{{user.email}}</div>\r\n        </div>\r\n        <div>\r\n          <div  align=\"center\">性别 ：</div>\r\n              <div size=\"large\" style=\"padding-left: 5px\" v-if=\"user.sex === 0\" >女</div>\r\n              <div size=\"large\" style=\"padding-left: 5px\" v-else-if=\"user.sex === 1\">男</div>\r\n              <div size=\"large\" style=\"padding-left: 5px\" v-else-if=\"user.sex === 2\">其他</div>\r\n        </div>\r\n        <div>\r\n          <div  align=\"center\">兴趣爱好 ：</div>\r\n          <div>{{user.hobby}}</div>\r\n        </div>\r\n      </div>\r\n    </el-card>\r\n\r\n\r\n    <div style=\"margin: 10px 0; position: absolute;font-size: large\">\r\n    <el-dialog\r\n        title=\"用户信息\"\r\n        :visible.sync=\"dialogVisible\"  width=\"50%\"  >\r\n      <el-form :model=\"form\" label-width=\"80px\">\r\n\r\n        <el-form-item label=\"编号:\">\r\n          <el-input v-model=\"form.id\" readonly style=\"width:20%\"></el-input>\r\n        </el-form-item>\r\n\r\n        <el-form-item label=\"头像:\">\r\n          <el-upload  action=\"http://localhost:9091/file/upload\"\r\n\r\n                      :on-success=\"filesUploadSuccess\" style=\"width: 45%\">\r\n            <el-button type=\"primary\" icon=\"el-icon-user\" plain>点击上传<i class=\"el-icon-upload el-icon--right\"></i></el-button>\r\n          </el-upload>\r\n        </el-form-item>\r\n\r\n\r\n\r\n        <el-form-item label=\"姓名:\">\r\n          <el-input v-model=\"form.name\" style=\"width: 25%\"></el-input>\r\n        </el-form-item>\r\n\r\n        <el-form-item label=\"性别:\"  prop=\"sex\" label-width=\"100px\"  style=\"margin-left: -20px;\">\r\n          <el-radio-group v-model=\"form.sex\">\r\n            <el-radio :label=\"1\">男</el-radio>\r\n            <el-radio :label=\"0\">女</el-radio>\r\n            <el-radio :label=\"2\">其他</el-radio>\r\n          </el-radio-group>\r\n        </el-form-item>\r\n\r\n        <el-form-item label=\"照片:\">\r\n          <el-upload\r\n              class=\"avatar-uploader\"\r\n              action=\"http://localhost:9091/file/upload\"\r\n              :show-file-list=\"false\"\r\n              :on-success=\"filesUploadSuccess1\">\r\n            <img v-if=\"form.faceImage\" :src=\"form.faceImage\" class=\"avatar\">\r\n            <i v-else class=\"el-icon-plus avatar-uploader-icon\"></i>\r\n          </el-upload>\r\n        </el-form-item>\r\n\r\n\r\n        <el-form-item label=\"用户名:\">\r\n          <el-input v-model=\"form.username\" style=\"width: 45%\"></el-input>\r\n        </el-form-item>\r\n\r\n        <el-form-item label=\"密码:\">\r\n          <el-input v-model=\"form.password\" style=\"width: 45%\"></el-input>\r\n        </el-form-item>\r\n\r\n        <el-form-item label=\"电话号码:\">\r\n          <el-input v-model=\"form.telephone\" style=\"width: 45%\"></el-input>\r\n        </el-form-item>\r\n\r\n        <el-form-item label=\"爱好:\">\r\n          <el-input v-model=\"form.hobby\" style=\"width: 60%\"></el-input>\r\n        </el-form-item>\r\n\r\n        <el-form-item label=\"个人简介 : \" >\r\n          <div style=\"border: 1px solid #ccc;\">\r\n            <Toolbar\r\n                style=\"border-bottom: 1px solid #ccc\"\r\n                :editor=\"editor\"\r\n                :defaultConfig=\"toolbarConfig\"\r\n                :mode=\"mode\"\r\n            />\r\n            <Editor\r\n                style=\"height: 230px; overflow-y: hidden;\"\r\n                v-model=\"form.profile\"\r\n                :defaultConfig=\"editorConfig\"\r\n                :mode=\"mode\"\r\n                @onCreated=\"onCreated\"\r\n            />\r\n          </div>\r\n        </el-form-item>\r\n      </el-form>\r\n\r\n      <template #footer>\r\n          <span class=\"dialog-footer\">\r\n            <el-button @click=\"dialogVisible = false\">取 消</el-button>\r\n            <el-button type=\"primary\" @click=\"save\">确 定</el-button>\r\n          </span>\r\n      </template>\r\n    </el-dialog>\r\n\r\n\r\n\r\n  </div>\r\n\r\n  </div>\r\n\r\n</template>\r\n\r\n<script>\r\nimport Vue from 'vue'\r\nimport { Editor, Toolbar } from '@wangeditor/editor-for-vue'\r\nimport axios from 'axios'\r\n\r\n\r\nexport default Vue.extend({\r\n  components: { Editor, Toolbar },\r\n  created() {\r\n    this.user=JSON.parse(localStorage.getItem(\"user\"))\r\n    this.getUser().then(res => {\r\n      this.form = res\r\n    })\r\n     this.ux=JSON.stringify(this.user).length\r\n  },\r\n  data() {\r\n    return {\r\n      name: 'MyInfo',\r\n      user: localStorage.getItem(\"user\") ? JSON.parse(localStorage.getItem(\"user\")) : {},\r\n      id:'',\r\n      ovo:0,\r\n      form:{},\r\n      dialogVisible:false,\r\n      editor: null,\r\n      toolbarConfig: { },\r\n      editorConfig: { placeholder: '请输入内容...' },\r\n      mode: 'default', // or 'simple'\r\n      ux:''\r\n    }\r\n  },\r\n\r\n  methods: {\r\n    async getUser() {\r\n      return (await this.request.get(\"/user/username/\" + this.user.username)).data\r\n    },\r\n    logout() {\r\n      this.$store.commit(\"logout\")\r\n      this.$message.success(\"退出成功\")\r\n      this.$router.push('/')\r\n    },\r\n    onCreated(editor) {\r\n      this.editor = Object.seal(editor) // 一定要用 Object.seal() ，否则会报错\r\n    },    //上传头像\r\n    filesUploadSuccess(res){\r\n      this.form.avatar = res;\r\n\r\n    },\r\n\r\n    //上传人脸识别照片\r\n    filesUploadSuccess1(res){\r\n      console.log(\"1\"+res)\r\n      this.form.faceImage = res;\r\n    },\r\n\r\n\r\n\r\n    //编辑用户信息\r\n    handleEdit(){\r\n      this.form = {\r\n         id: this.user.id,\r\n         name: this.user.name,\r\n         telephone:this.user.telephone,\r\n         sex:this.user.sex,\r\n         email:this.user.email,\r\n         hobby:this.user.hobby,\r\n         username:this.user.username,\r\n         password:this.user.password,\r\n         profile:this.user.profile,\r\n         faceImage:this.user.faceImage\r\n      }\r\n      this.dialogVisible = true\r\n    },\r\n    save() {\r\n      this.request.post(\"/user\", this.form).then(res => {\r\n        if (res.code === '200') {\r\n          this.$message.success(\"保存成功\")\r\n\r\n          // 触发父级更新User的方法\r\n          this.$emit(\"refreshUser\")\r\n\r\n          // 更新浏览器存储的用户信息\r\n          this.getUser().then(res => {\r\n            res.token = JSON.parse(localStorage.getItem(\"user\")).token\r\n            localStorage.setItem(\"user\", JSON.stringify(res))\r\n            location.reload();\r\n          })\r\n\r\n\r\n\r\n        }else{\r\n          this.$message.error(\"保存失败\")\r\n        }\r\n\r\n      })\r\n    },\r\n\r\n\r\n\r\n\r\n  },\r\n  mounted() {\r\n    // 模拟 ajax 请求，异步渲染编辑器\r\n    setTimeout(() => {\r\n      this.form.profile = '<p>'+this.user.profile+'</p>'\r\n    }, 1500)\r\n  },\r\n  beforeDestroy() {\r\n    const editor = this.editor\r\n    if (editor == null) return\r\n    editor.destroy() // 组件销毁时，及时销毁编辑器\r\n  },\r\n\r\n\r\n})\r\n</script>\r\n\r\n<style scoped>\r\n.avatar1 + .avatar2 :hover >.avatar1{\r\n -webkit-filter: brightness(0.8);filter: brightness(0.8)\r\n}\r\n\r\n\r\n::v-deep .avatar-uploader .el-upload {\r\n  border: 1px dashed #d9d9d9;\r\n  border-radius: 6px;\r\n  cursor: pointer;\r\n  position: relative;\r\n  overflow: hidden;\r\n}\r\n::v-deep .avatar-uploader .el-upload:hover {\r\n  border-color: #409EFF;\r\n}\r\n::v-deep .avatar-uploader-icon {\r\n  font-size: 28px;\r\n  color: #8c939d;\r\n  width: 178px;\r\n  height: 200px;\r\n  line-height: 200px;\r\n  text-align: center;\r\n}\r\n::v-deep .avatar {\r\n  width: 178px;\r\n  height: 200px;\r\n  display: block;\r\n}\r\n\r\n.MyInfo h1 {\r\n  font-weight: 400;\r\n  height: 60px;\r\n  line-height: 60px;\r\n  font-size: 26px;\r\n}\r\n\r\n.box-card {\r\n  border-radius: 10px;\r\n  margin-bottom: 30px;\r\n  padding: 0 30px;\r\n}\r\n\r\n.box-card-header span {\r\n  margin-right: 15px;\r\n}\r\n::v-deep .box-card-header .el-button {\r\n  background: none;\r\n  color: #409eff;\r\n  border: none;\r\n}\r\n\r\n::v-deep .el-card__header,\r\n::v-deep .el-card__body {\r\n  padding: 18px 0px;\r\n\r\n}\r\n::v-deep .el-card__body {\r\n  padding-top: 0px;\r\n\r\n}\r\n.clearfix:before,\r\n.clearfix:after {\r\n  display: table;\r\n  content: \"\";\r\n}\r\n.clearfix:after {\r\n  clear: both;\r\n}\r\n\r\n\r\n\r\n.MyInfo-body {\r\n  font-size: 12px;\r\n}\r\n\r\n.MyInfo-body div:nth-child(1) img {\r\n  width: 74px;\r\n  height: 74px;\r\n  border-radius: 100%;\r\n}\r\n.MyInfo-body > div {\r\n  margin-top: 15px;\r\n}\r\n\r\n.MyInfo-body > div {\r\n  display: flex;\r\n  align-items: center;\r\n  height: 38px;\r\n}\r\n.MyInfo-body > div div:nth-child(1) {\r\n  width: 110px;\r\n  color: #888888;\r\n}\r\n.MyInfo-body > div div:nth-child(2) {\r\n  text-align: left;\r\n}\r\n</style>\r\n<style src=\"@wangeditor/editor/dist/css/style.css\"></style>"]},"metadata":{},"sourceType":"module"}